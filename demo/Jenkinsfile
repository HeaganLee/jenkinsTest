pipeline {
    agent any
    environment {
        DEPLOY_SERVER = 'ubuntu@<Î∞∞Ìè¨ÏÑúÎ≤Ñ_IP>'
        APP_NAME = 'my-backend'
        JAR_PATH = 'build/libs/my-backend-0.0.1-SNAPSHOT.jar'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/HeaganLee/jenkinsTest.git'
            }
        }

        stage('Build') {
            steps {
                sh './gradlew clean build -x test'
            }
        }

        stage('Deploy') {
            steps {
                sshagent(['deploy-key']) {
                    sh '''
                    echo "üì¶ Î∞∞Ìè¨ ÏÑúÎ≤ÑÏóê jar Î≥µÏÇ¨ Ï§ë..."
                    scp ${JAR_PATH} $DEPLOY_SERVER:/home/ubuntu/${APP_NAME}.jar

                    echo "üõë Í∏∞Ï°¥ ÌîÑÎ°úÏÑ∏Ïä§ Ï¢ÖÎ£å Ï§ë..."
                    ssh $DEPLOY_SERVER "pkill -f ${APP_NAME} || true"

                    echo "üöÄ ÏÉà ÌîÑÎ°úÏÑ∏Ïä§ Ïã§Ìñâ Ï§ë..."
                    ssh $DEPLOY_SERVER "nohup java -jar /home/ubuntu/${APP_NAME}.jar > app.log 2>&1 &"
                    '''
                }
            }
        }
    }

    post {
        success {
            echo "‚úÖ Î∞∞Ìè¨ ÏÑ±Í≥µ!"
        }
        failure {
            echo "‚ùå Î∞∞Ìè¨ Ïã§Ìå®!"
        }
    }
}
